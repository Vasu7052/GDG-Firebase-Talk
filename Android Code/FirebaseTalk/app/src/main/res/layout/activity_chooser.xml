<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooserActivity"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="-50sp">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/firebase"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Core Features"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnAuth"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Firebase Authentication"
                android:background="#ffffff"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="5sp"/>

            <Button
                android:id="@+id/btnDatabase"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="5sp"
                android:text="Firebase Databse"
                android:background="#ffffff"/>

            <Button
                android:id="@+id/btnStorage"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="5sp"
                android:text="Firebase Storage"
                android:background="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="-50sp">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/firebase"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MLKit"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

            </LinearLayout>



            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="5sp"
                android:text="Recognize Text"
                android:background="#ffffff"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="5sp"
                android:text="Face Detection"
                android:background="#ffffff"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="5sp"
                android:text="Barcode Detection"
                android:background="#ffffff"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="5sp"
                android:text="Image Labeling"
                android:background="#ffffff"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>